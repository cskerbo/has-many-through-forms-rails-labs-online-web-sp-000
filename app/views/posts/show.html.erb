<%= @post.title %>

<%= @post.content %>

<ul>
   <%= @post.categories.each do |category| %>
     <li><%= link_to(category.name, category) %></li>
   <% end %>
</ul>

<h2>Comments:</h2>
<ul>
    <%= @post.comments.each do |comment| %>
      <li><%= comment.user.username %> says: <%= comment.content %></li>
    <% end %>
</ul>
