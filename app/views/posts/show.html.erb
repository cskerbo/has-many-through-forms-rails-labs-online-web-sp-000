<%= @post.title %>

<%= @post.content %>

<% @post.categories.each do |category| %>
<%= category %>
<% end %>

<% @post.comments.each do |comment| %>
<%= comment %>
<% end %>

<%= form_for post do |f| %>
  <%= f.label "Comment" %>
  <%= f.text_area :comment %>
  <% end %>
  <%= f.submit %>
<% end %>
